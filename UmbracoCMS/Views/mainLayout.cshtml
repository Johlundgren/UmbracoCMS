@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;

	var pageTitle = !string.IsNullOrEmpty(ViewBag.Title) ? $"{ViewBag.Title} | Onatrix - Financial Solutions for Your Business"  : "Onatrix - Financial Solutions for Your Business";
}

<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/main.css">

	<title>@pageTitle</title>

</head>
<body>
	<div class="wrapper">
		    <header>
        <div class="top-header">
            <div class="container">
                <p>Klarabergsviadukten 90, 111 64 Stockholm</p>
                <div class="social-links">
                    <a href="facebook.com"><i class="fa-brands fa-facebook"></i></a>
                    <a href="twitter.com"><i class="fa-brands fa-x-twitter"></i></a>
                    <a href="linkedin.com"><i class="fa-brands fa-linkedin-in"></i></a>
                  </div>
           </div>
       </div>
       <div class="bottom-header">
            <div class="container">
                <a href="/">
                <img src="media/r5rp543g/onatrixlogo.svg" alt="onatrix logotype">
            </a>
                <div class="navbar">
                    <a href="/about">About</a>
                    <a href="/service">Services</a>
                    <a href="/project">Projects</a>
                    <a href="/contact">Contact</a>
                </div>
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
       </div>
    </header>

		<main>
			@RenderBody()
		</main>
		<footer>
                <div class="container">
                <p class="theme-color">© Onatrix. All Rights Reserved. Credits to</p><p class="color-p">Themesflat</p>
            </div>
        </footer>
	</div>
</body>
</html>